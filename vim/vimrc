set nocompatible
filetype on
filetype off

set rtp+=~/.vim/bundle/vundle/
call vundle#begin()

Plugin 'gmarik/vundle'

" Editor enhancements
Plugin 'Lokaltog/vim-easymotion'
Plugin 'altercation/vim-colors-solarized'
Plugin 'commentary.vim'
Plugin 'delimitMate.vim'
Plugin 'editorconfig/editorconfig-vim'
Plugin 'ervandew/supertab'
Plugin 'scrooloose/nerdtree'
Plugin 'kien/ctrlp.vim'

" Programming languages and frameworks
Plugin 'sheerun/vim-polyglot'

" Local bundles; source it here or plugins don't get loaded
if filereadable($HOME . "/.vimrc.local_plugins")
  source ~/.vimrc.local_plugins
endif

call vundle#end()

filetype plugin indent on

set modelines=0

set autoindent
set smartindent
set showmatch
set showmode
set showcmd
set cursorline
set number
set ruler

set backspace=indent,eol,start

set list
set listchars=tab:▸\ ,eol:¬

set smarttab
set tabstop=4
set shiftwidth=4
set softtabstop=4
set expandtab

set wrap
set textwidth=79
set formatoptions=qrn1
if exists("&colorcolumn")
    set colorcolumn=85
endif

set wildmenu
set wildmode=list:longest,full

if exists("&autochdir")
    set autochdir
endif

nnoremap <up> <nop>
nnoremap <down> <nop>
nnoremap <left> <nop>
nnoremap <right> <nop>
inoremap <up> <nop>
inoremap <down> <nop>
inoremap <left> <nop>
inoremap <right> <nop>
nnoremap j gj
nnoremap k gk

inoremap <F1> <ESC>
nnoremap <F1> <ESC>
vnoremap <F1> <ESC>

nnoremap ; :

" Removes trailing whitespace
nnoremap <leader>W :%s/\s\+$//<cr>:let @/=''<CR>

" Toggle NERDTree
nnoremap <leader>t :NERDTreeToggle<CR>

" Autosave on window focus loss
au FocusLost * :wa

set guifont=DejaVu\ Sans\ Mono:h14
" Hide toolbar
set guioptions-=T

:syntax enable

set t_Co=256
set background=dark
colorscheme solarized

" Local config
if filereadable($HOME . "/.vimrc.local")
  source ~/.vimrc.local
endif
